<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="default" extends="struts-default"></package>
	
	<package name="index" namespace="/" extends="default">	
		<default-action-ref name="home"/>
		<action name="home" class="ar.edu.unlam.integrador.action.HomeAction">
			<result name="SUCCESS">/jsp/index.jsp</result>
		</action>
	</package>
	<package name="institucion" namespace="/institucion" extends="default">
		<action name="menu" class="ar.edu.unlam.integrador.action.InstitucionAction">
			<result name="SUCCESS">/jsp/institucion/institucion.jsp</result>
		</action>
		<action name="misAlumnos" class="ar.edu.unlam.integrador.action.InstitucionAction">
			<result name="SUCCESS">/jsp/institucion/alumnos.jsp</result>
		</action>
		<action name="datosPersonales" class="ar.edu.unlam.integrador.action.InstitucionAction">
			<result name="SUCCESS">/jsp/institucion/datos_personales.jsp</result>
		</action>
		<action name="historico" class="ar.edu.unlam.integrador.action.InstitucionAction">
			<result name="SUCCESS">/jsp/institucion/historico.jsp</result>
		</action>
	</package>
	<package name="paciente" namespace="/paciente" extends="default">
		<action name="menu" class="ar.edu.unlam.integrador.action.PacienteAction">
			<result name="SUCCESS">/jsp/paciente/paciente.jsp</result>
		</action>
		<action name="actividades" class="ar.edu.unlam.integrador.action.PacienteAction">
			<result name="SUCCESS">/jsp/paciente/actividades.jsp</result>
		</action>
		<action name="datosPersonales" class="ar.edu.unlam.integrador.action.PacienteAction">
			<result name="SUCCESS">/jsp/paciente/datos_personales.jsp</result>
		</action>
		<action name="mensaje" class="ar.edu.unlam.integrador.action.PacienteAction">
			<result name="SUCCESS">/jsp/paciente/mensaje.jsp</result>
		</action>
	</package>
	<package name="profesional" namespace="/profesional" extends="default">
		<action name="menu" class="ar.edu.unlam.integrador.action.ProfesionalAction">
			<result name="SUCCESS">/jsp/profesional/profesional.jsp</result>
		</action>
		<action name="pacientes" class="ar.edu.unlam.integrador.action.ProfesionalAction">
			<result name="SUCCESS">/jsp/profesional/pacientes.jsp</result>
		</action>
		<action name="datosPersonales" class="ar.edu.unlam.integrador.action.ProfesionalAction">
			<result name="SUCCESS">/jsp/profesional/datos_personales.jsp</result>
		</action>
		<action name="mensajes" class="ar.edu.unlam.integrador.action.ProfesionalAction">
			<result name="SUCCESS">/jsp/profesional/mensajes.jsp</result>
		</action>
	</package>
</struts>